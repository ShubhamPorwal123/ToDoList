<%- include('header'); -%>

    <div class="box" id="heading">
        <h1>
            <%= ListTitle %>
        </h1>
    </div>


    <div class="box">

        <%      newItemArray.forEach(function(items){  %>

            <form action="/delete" method="POST">

                <div class="item">
                    <input type="checkbox" name="checkbox" value = "<%=items._id %>" onChange="this.form.submit()">
                    <p>
        <%=               items.name       %>
                    </p>
                </div>

            </form>

        <%      });      %>

                <form class="item" action="/" method="post">
                    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                    <button type="submit" name="list" value="<%= ListTitle %>"> + </button>
                </form>
    </div>
    
    <%- include('footer'); -%>